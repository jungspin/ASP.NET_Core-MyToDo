@model MyToDo.Models.User

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "회원가입";
}

<h1>회원가입</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="아이디를 입력해주세요"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="비밀번호를 입력해주세요"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
 @*            <div class="form-group">
                <input asp-for="Created" class="form-control" type="datetime-local" hidden value=@DateTime.UtcNow />
            </div>
            <div class="form-group">
                <input asp-for="Updated" class="form-control" type="datetime-local" hidden value=@DateTime.UtcNow />
            </div> *@
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                    </script>
                }
            </div>
        </form>
    </div>
</div>

